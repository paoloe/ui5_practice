<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Shell>
		<App>
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Panel
							headerText="{i18n>hdCas}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<Button
									text="{i18n>showHelloButtonText}"
									press=".onShowHello"
									class="sapUiSmallMarginEnd"/>
								<!-- provided the below an ID so I can retrieve its value -->
								<InputBase
									id="inputCase" 
									placeholder="{i18n>iaCas}"
									valueLiveUpdate="true"
									width="60%"/>
							</content>
						</Panel>
					</content>
					<content>
						<Panel
							headerText="{i18n>hdSol}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<Button
									text="{i18n>showHelloButtonText}"
									press=".onShowHello"
									class="sapUiSmallMarginEnd"/>
								<InputBase
									placeholder="{i18n>iaSol}"
									valueLiveUpdate="true"
									width="60%"/>
							</content>
						</Panel>
					</content>
					<content>
						<Panel
							headerText="{i18n>hdChe}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<Button
									text="{i18n>showHelloButtonText}"
									press=".onShowHello"
									class="sapUiSmallMarginEnd"/>
								<InputBase
									placeholder="{i18n>iaSol}"
									valueLiveUpdate="true"
									width="60%"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
