<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.MainPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        headerText="{i18n>hdCas}"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <Button
                text="{i18n>showHelloButtonText}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd"/>
            <!-- provided the below an ID so I can retrieve its value -->
            <InputBase
                id="inputCase" 
                placeholder="{i18n>iaCas}"
                width="60%"/>            
        </content>
    </Panel>
        <Panel
